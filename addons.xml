<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.module.archive_tool" name="archive_tool" provider-name="Dagli" version="2.0.2">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="vfs.libarchive"/>
    <import addon="vfs.rar" optional="true"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Python class for working with file archives</summary>
    <description lang="en">archive_tool is a set of common tools to work with the Kodi libarchive virtual file system</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
    <license>GNU GENERAL PUBLIC LICENSE V3</license>
  </extension>
</addon>

<addon id="plugin.program.retrobiostool" name="Retro BIOS Tool" version="0.5">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.kodi-six"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.routing"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="retrobiostool.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Retro BIOS Tool</summary>
    <description lang="en_GB">Retro BIOS Tool will scan a folder of your choosing and copy the appropriate files for use in Kodi game addons</description>
    <license>GNU General Public License v3.0</license>
    <source>https://github.com/TheDagli/PlayStation-4/tree/PS4/plugin.program.retrobiostool</source>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>

<addon id="repository.Dagli" name="Dagli Add-ons" version="1.0.0" provider-name="Dagli">
    <extension point="xbmc.addon.repository" name="Dagli Add-ons">
        <info compressed="true">https://github.com/TheDagli/PlayStation-4/raw/master/addons.xml</info>
        <checksum>https://github.com/TheDagli/PlayStation-4/raw/PS4/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/TheDagli/PlayStation-4/PS4/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Dagli Add-ons</summary>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.program.spiele" name="Spiele" version="3.0.2">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.dateutil"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.routing"/>
    <import addon="script.module.archive_tool" version="2.0.2"/>
    <import addon="plugin.video.youtube" version="6.8.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video game</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Spiele</summary>
    <description lang="en_GB">Spiele is a FREE Kodi addon that will browse and launch games available from the Internet</description>
    <license>CC BY-SA 4.0, GNU GENERAL PUBLIC LICENSE Version 2.0</license>
    <source>https://github.com/TheDagli/PlayStation-4/tree/PS4/plugin.program.spiele</source>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
</addons>
